

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Shooter Game</title>
    <script src="https://cdn.jsdelivr.net/npm/phaser@3.55.2/dist/phaser.js"></script>
    <style>
        body {
            margin: 0;
        }
    </style>
</head>
<body>

<script>
    const config = {
        type: Phaser.AUTO,
        width: 800,
        height: 600,
        physics: {
            default: 'arcade',
            arcade: {
                gravity: { y: 0 },
                enableBody: true,
            }
        },
        scene: {
            preload: preload,
            create: create,
            update: update
        }
    };

    const game = new Phaser.Game(config);

    function preload() {
        this.load.image('ship', 'path/to/your/ship/image.png');
        this.load.image('bullet', 'path/to/your/bullet/image.png');
    }

    function create() {
        // Create the player ship
        player = this.physics.add.sprite(400, 500, 'ship');
        player.setCollideWorldBounds(true);

        // Create bullets group
        bullets = this.physics.add.group({
            defaultKey: 'bullet',
            maxSize: 10
        });

        // Set up keyboard input
        cursors = this.input.keyboard.createCursorKeys();
        fireKey = this.input.keyboard.addKey(Phaser.Input.Keyboard.KeyCodes.SPACE);
    }

    function update() {
        // Move the player ship
        if (cursors.left.isDown) {
            player.setVelocityX(-200);
        } else if (cursors.right.isDown) {
            player.setVelocityX(200);
        } else {
            player.setVelocityX(0);
        }

        // Shoot bullets
        if (fireKey.isDown) {
            fireBullet();
        }
    }

    function fireBullet() {
        let bullet = bullets.get(player.x, player.y);
        if (bullet) {
            bullet.setActive(true);
            bullet.setVisible(true);
            bullet.setVelocityY(-400);
        }
    }
</script>

</body>
</html>






